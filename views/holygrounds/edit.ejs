<% include ../partials/header%>


    <div class="row"></div>
    <h1 style="text-align: center">Edit <%= holyground.name %></h1>
    <div style="width: 30%; margin: 25px auto">
        <form action="/holygrounds/<%= holyground._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <input class="form-control" type="text" name="holyground[name]" value="<%= holyground.name %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="holyground[price]" value="<%= holyground.price %>">
            </div>
            <div class="form-group">
                <label>Edit Image</label>
                <div class="input-group">
                        <span class="input-group-btn">
                            <span class="btn btn-default btn-file">
                                Update <input type="file" id="image" name='image' accept="image/*" onchange="loadFile(event)">
                            </span>
                        </span>
                    <input id="image-name" type="text" class="form-control" readonly>
                </div>
                <div class="thumbnail">
                    <img id="image-preview" class="img-responsive" src="<%= holyground.image %>">
                </div>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="holyground[description]" value="<%= holyground.description %>">
            </div>
            <div class="form-group">
                <label for="location">Location</label>
                <input class="form-control" type="text" name="holyground[location]" id="location" value="<%= holyground.location %>">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/holygrounds">Go Back</a>
    </div>

<% include ../partials/footer%>