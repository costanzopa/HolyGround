<% include ../partials/header%>

<div class="container">
    <div class="row"></div>
    <h1 style="text-align: center">Add a New Comment to <%= holyground.name %>!</h1>
    <div style="width: 30%; margin: 25px auto">
        <form action="/holygrounds/<%= holyground._id %>/comments" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[author]" placeholder="author">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="text">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/holygrounds/<%= holyground._id %>">Go Back</a>
    </div>
</div>

<% include ../partials/footer%>